
<div data-section-id="{{ section.id }}" data-section-type="category-listing-type-1" class="category-listing-type-1">
  <div class="grid-uniform">
    <div class="container">
      {% if section.settings.heading != blank %}
        <div class="section-header text-center">
          <h2 class="section-title">{{ section.settings.heading }}</h2>
          {% if section.settings.subheading != blank %}
            <div class="section-subheading">{{ section.settings.subheading }}</div>
          {% endif %}
        </div>
      {% endif %}

      <ul class="category-listing_block">
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            {% case section.blocks.size %}
              {% when 1 %}
                {%- assign block_width = 'one-whole text-center' -%}
              {% when 2 %}
                {%- assign block_width = 'wide--one-half post-large--one-half large--one-half medium--one-half small--one-half' -%}
              {% when 3 %}
                {%- assign block_width = 'wide--one-third post-large--one-third large--one-third medium--one-third small--one-half' -%}
              {% when 4 %}
                {%- assign block_width = 'wide--one-quarter post-large--one-quarter large--one-quarter medium--one-quarter small--one-half' -%}
              {% when 5 %}
                {%- assign block_width = 'wide--one-fifth post-large--one-fifth large--one-fifth medium--one-third small--one-half' -%}
              {% else %}
                {%- assign block_width = 'wide--one-quarter post-large--one-quarter large--one-quarter medium--one-quarter small--one-half' -%}
            {% endcase %}

            <li class="grid__item {{ block_width }} wow fadeInUp animated" data-wow-delay="{{ settings.time_lazy_load }}ms">
              <div class="category-listing_section">
                <div class="category-listing_inner" style="background:{{ block.settings.bg_bolor }};">
                  {% if block.settings.url != blank %}
                    <a href="{{block.settings.url}}" class="category-link">
                  {% endif %}

                    <div class="category_image">
                      {% if block.settings.image != blank %}
                        <img src="{{ block.settings.image | img_url: '300x300', crop: 'center' }}" alt="{{ block.settings.title }}" />
                      {% else %}
                        <img src="//via.placeholder.com/300x300" alt="placeholder">
                      {% endif %}
                    </div>

                    <div class="category_text">
                      {% if block.settings.title != blank %}
                        <h4>{{ block.settings.title }}</h4>
                      {% endif %}
                      {% if block.settings.description != blank %}
                        <p class="category-description">{{ block.settings.description }}</p>
                      {% endif %}
                    </div>

                  {% if block.settings.url != blank %}
                    </a>
                  {% endif %}
                </div>
              </div>
            </li>
          {% endfor %}
        {% endif %}
      </ul>
    </div>
  </div>
</div>

<style type="text/css">
  .category-listing-type-1 {
    padding: 60px 0;
  }

  .category-listing-type-1 .section-header {
    margin-bottom: 40px;
  }

  .category-listing-type-1 .section-title {
    font-size: 32px;
    margin-bottom: 15px;
    color: {{ section.settings.heading_color }};
  }

  .category-listing-type-1 .section-subheading {
    font-size: 16px;
    color: {{ section.settings.subheading_color }};
    line-height: 1.6;
  }

  .category-listing-type-1 .category-listing_block {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -15px;
    list-style: none;
    padding: 0;
  }

  .category-listing-type-1 .grid__item {
    padding: 15px;
  }

  .category-listing-type-1 .category-listing_inner {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .category-listing-type-1 .category-link {
    text-decoration: none;
    display: block;
  }

  .category-listing-type-1 .category_image {
    position: relative;
    padding-top: 100%;
    overflow: hidden;
  }

  .category-listing-type-1 .category_image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-listing-type-1 .category_text {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    text-align: center;
  }

  .category-listing-type-1 .category_text h4 {
    color: {{ section.settings.title_color }};
    font-size: 18px;
    margin: 0;
    font-weight: 600;
    text-transform: capitalize;
  }

  .category-listing-type-1 .category-description {
    color: {{ section.settings.description_color }};
    font-size: 14px;
    margin: 5px 0 0;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .category-listing-type-1 .category-listing_inner:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px -10px {{ section.settings.box-shadow_color }};
  }

  .category-listing-type-1 .category-listing_inner:hover .category_image img {
    transform: scale(1.1);
  }

  .category-listing-type-1 .category-listing_inner:hover .category_text {
    background: linear-gradient(to top, {{ section.settings.bg_hover_bolor }}, transparent);
  }

  .category-listing-type-1 .category-listing_inner:hover .category_text h4 {
    color: {{ section.settings.bg_hover_color }};
  }

  .category-listing-type-1 .category-listing_inner:hover .category-description {
    opacity: 1;
    transform: translateY(0);
  }

  @media screen and (max-width: 767px) {
    .category-listing-type-1 {
      padding: 40px 0;
    }

    .category-listing-type-1 .section-title {
      font-size: 24px;
    }

    .category-listing-type-1 .grid__item {
      padding: 10px;
    }

    .category-listing-type-1 .category_text {
      padding: 15px;
    }

    .category-listing-type-1 .category_text h4 {
      font-size: 16px;
    }
  }
</style>

