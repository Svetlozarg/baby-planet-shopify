<div data-section-id="{{ section.id }}" data-section-type="category-listing-type-1" class="category-listing-type-1">
  <div class="grid-uniform">
    <div class="container" style="max-width: 1800px;">
      {% if section.settings.heading != blank %}
        <div class="section-header text-center">
          <h2 class="section-title">{{ section.settings.heading }}</h2>
          {% if section.settings.subheading != blank %}
            <div class="section-subheading">{{ section.settings.subheading }}</div>
          {% endif %}
        </div>
      {% endif %}

      <div class="category-grid">
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            <div class="category-card" data-wow-delay="{{ settings.time_lazy_load }}ms">
              {% if block.settings.url != blank %}
                <a href="{{block.settings.url}}" class="category-link">
              {% endif %}

                <div class="category-card-inner" style="background: {{ block.settings.bg_bolor }};">
                  <div class="category-image-wrapper">
                    {% if block.settings.image != blank %}
                      <img src="{{ block.settings.image | img_url: '300x300', crop: 'center' }}" alt="{{ block.settings.title }}" class="category-image" />
                    {% else %}
                      <img src="//via.placeholder.com/300x300" alt="placeholder" class="category-image" />
                    {% endif %}
                  </div>

                  <div class="category-content">
                    {% if block.settings.title != blank %}
                      <h3 class="category-title">{{ block.settings.title }}</h3>
                    {% endif %}
                    {% if block.settings.description != blank %}
                      <p class="category-description">{{ block.settings.description }}</p>
                    {% endif %}
                  </div>
                </div>

              {% if block.settings.url != blank %}
                </a>
              {% endif %}
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style type="text/css">
  .category-listing-type-1 {
    padding: 80px 0;
  }

  .category-listing-type-1 .section-header {
    margin-bottom: 60px;
  }

  .category-listing-type-1 .section-title {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 16px;
    color: {{ section.settings.heading_color }};
    letter-spacing: -0.5px;
    line-height: 1.2;
  }

  .category-listing-type-1 .section-subheading {
    font-size: 18px;
    color: {{ section.settings.subheading_color }};
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
    font-weight: 400;
  }

  .category-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 32px;
    width: 100%;
    margin: 0 auto;
    padding: 0 20px;
  }

  .category-card {
    flex: 0 1 280px;
    max-width: 280px;
    min-width: 280px;
    height: 380px;
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  @media screen and (min-width: 1500px) {
    .category-card {
      flex: 1 1 300px;
      max-width: 320px;
    }
  }

  @media screen and (min-width: 1100px) and (max-width: 1499px) {
    .category-card {
      flex: 1 1 280px;
      max-width: 300px;
    }
  }

  .category-card:hover {
    transform: translateY(-8px);
  }

  .category-link {
    text-decoration: none;
    display: block;
    height: 100%;
  }

  .category-card-inner {
    width: 100%;
    min-width: 280px;
    max-width: 280px;
    height: 380px;
    border-radius: 28px;
    padding: 40px 24px 32px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    background: linear-gradient(135deg, var(--card-bg, #f8fdff) 0%, rgba(255, 255, 255, 0.9) 100%);
  }

  .category-card:hover .category-card-inner {
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
    transform: scale(1.02);
  }

  .category-image-wrapper {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    background: rgba(255, 255, 255, 0.9);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    flex-shrink: 0;
  }

  .category-card:hover .category-image-wrapper {
    transform: scale(1.05);
    box-shadow: 0 16px 50px rgba(0, 0, 0, 0.15);
  }

  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .category-card:hover .category-image {
    transform: scale(1.1);
  }

  .category-content {
    text-align: center;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 24px;
    min-height: 100px;
  }

  .category-title {
    font-size: 22px;
    font-weight: 600;
    margin: 0 0 12px 0;
    color: {{ section.settings.title_color }};
    line-height: 1.3;
    letter-spacing: -0.2px;
    transition: color 0.3s ease;
  }

  .category-card:hover .category-title {
    color: {{ section.settings.title_color }};
  }

  .category-description {
    font-size: 15px;
    color: {{ section.settings.description_color }};
    line-height: 1.5;
    margin: 0;
    opacity: 0.8;
    transition: all 0.3s ease;
    max-width: 200px;
    margin: 0 auto;
  }

  .category-card:hover .category-description {
    opacity: 1;
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media screen and (max-width: 1200px) {
    .category-grid {
      gap: 28px;
      padding: 0 16px;
    }

    .category-card {
      flex: 0 1 260px;
      min-width: 240px;
      max-width: 320px;
    }

    .category-card-inner {
      height: 360px;
      padding: 36px 20px 28px;
      max-width: none;
      min-width: 240px;
    }

    .category-image-wrapper {
      width: 160px;
      height: 160px;
    }

    .category-title {
      font-size: 20px;
    }
  }

  @media screen and (max-width: 768px) {
    .category-listing-type-1 {
      padding: 60px 0;
    }

    .category-listing-type-1 .section-header {
      margin-bottom: 40px;
    }

    .category-listing-type-1 .section-title {
      font-size: 32px;
    }

    .category-listing-type-1 .section-subheading {
      font-size: 16px;
    }

    .category-grid {
      gap: 24px;
      padding: 0 12px;
    }

    .category-card {
      flex: 0 1 240px;
      min-width: 220px;
      max-width: 280px;
    }

    .category-card-inner {
      height: 340px;
      padding: 32px 16px 24px;
    }

    .category-image-wrapper {
      width: 140px;
      height: 140px;
    }

    .category-title {
      font-size: 18px;
    }

    .category-description {
      font-size: 14px;
    }
  }

  @media screen and (max-width: 480px) {
    .category-listing-type-1 {
      padding: 40px 0;
    }

    .category-grid {
      gap: 20px;
      padding: 0 16px;
    }

    .category-card {
      flex: 1 1 100%;
      min-width: 100%;
      max-width: 100%;
    }

    .category-card-inner {
      height: 320px;
      padding: 28px 20px 20px;
    }

    .category-image-wrapper {
      width: 120px;
      height: 120px;
    }

    .category-content {
      padding-top: 20px;
      min-height: 80px;
    }

    .category-title {
      font-size: 16px;
      margin-bottom: 8px;
    }

    .category-description {
      font-size: 13px;
    }
  }

  /* Enhanced animations for baby theme */
  .category-card {
    animation: fadeInUp 0.6s ease-out;
  }

  .category-card:nth-child(1) { animation-delay: 0.1s; }
  .category-card:nth-child(2) { animation-delay: 0.2s; }
  .category-card:nth-child(3) { animation-delay: 0.3s; }
  .category-card:nth-child(4) { animation-delay: 0.4s; }
  .category-card:nth-child(5) { animation-delay: 0.5s; }
  .category-card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Improved loading state */
  .category-image {
    background: linear-gradient(90deg, #f0f0f0 25%, transparent 37%, #f0f0f0 63%);
    background-size: 400% 100%;
  }
</style>

