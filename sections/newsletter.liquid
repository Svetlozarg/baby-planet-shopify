{% if section.settings.title != blank or section.settings.text != blank %}
<div data-section-id="{{ section.id }}" data-section-type="newsletter-block" style="width: 100%; padding: 0;">
  <div class="newsletter-section" style="background: linear-gradient(135deg, {{ section.settings.bg_color | default: '#FFF8F0' }}, {{ section.settings.bg_gradient_color | default: '#F8F4FF' }});">

    <!-- Decorative elements -->
    <div class="newsletter-decorations">
      <div class="decoration decoration-1"></div>
      <div class="decoration decoration-2"></div>
      <div class="decoration decoration-3"></div>
      <div class="decoration decoration-4"></div>
    </div>

    <div class="newsletter-container">
      <div class="newsletter-content">

        <!-- Header Section -->
        <div class="newsletter-header">
          <div class="newsletter-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>

          {% if section.settings.title != blank %}
          <h2 class="newsletter-title" style="color: {{ section.settings.title_color | default: '#2D3748' }};">
            {{ section.settings.title }}
          </h2>
          {% endif %}

          {% if section.settings.text != blank %}
          <div class="newsletter-description">
            <p style="color: {{ section.settings.text_color | default: '#4A5568' }};">{{ section.settings.text }}</p>
          </div>
          {% endif %}
        </div>

        <!-- Trust indicators -->
        <div class="newsletter-trust">
          <div class="trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>–ë–µ–∑ —Å–ø–∞–º</span>
          </div>
          <div class="trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
              <circle cx="12" cy="16" r="1" stroke="currentColor" stroke-width="2"/>
              <path d="M7 11V7A5 5 0 0 1 17 7V11" stroke="currentColor" stroke-width="2"/>
            </svg>
            <span>100% —Å–∏–≥—É—Ä–Ω–æ</span>
          </div>
          <div class="trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M16 21V5A2 2 0 0 0 14 3H10A2 2 0 0 0 8 5V21L12 18L16 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>–û—Ç–ø–∏—Å–≤–∞–Ω–µ –ø–æ –≤—Å—è–∫–æ –≤—Ä–µ–º–µ</span>
          </div>
        </div>

        <!-- Form Section -->
        <div class="newsletter-form-wrapper">
          {% if settings.newsletter_form_action != blank %}
          <form action="{{ settings.newsletter_form_action }}" method="post" name="mc-embedded-subscribe-form" target="_blank" class="newsletter-form">
            <div class="form-group">
              <div class="input-wrapper">
                <input type="email"
                       value="{% if customer %}{{ customer.email }}{% endif %}"
                       placeholder="{{ 'general.newsletter_form.newsletter_email' | t | default: 'Enter your email address' }}"
                       name="EMAIL"
                       class="newsletter-input"
                       style="background-color: {{ section.settings.input_bg_color | default: '#FFFFFF' }}; color: {{ section.settings.input_text_color | default: '#2D3748' }};"
                       aria-label="{{ 'general.newsletter_form.newsletter_email' | t | default: 'Email address' }}"
                       required>
                <button type="submit" class="newsletter-button" name="subscribe"
                        style="background: {{ section.settings.button_bg_color | default: '#FF8FA3' }}; color: {{ section.settings.button_txt_color | default: '#FFFFFF' }};"
                        onmouseover="this.style.background='{{ section.settings.button_hover_bg_color | default: '#FF7A93' }}'; this.style.color='{{ section.settings.button_hover_txt_color | default: '#FFFFFF' }}';"
                        onmouseout="this.style.background='{{ section.settings.button_bg_color | default: '#FF8FA3' }}'; this.style.color='{{ section.settings.button_txt_color | default: '#FFFFFF' }}';">
                  <span class="button-text">{{ section.settings.button | default: 'Subscribe' }}</span>
                  <svg class="button-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
              </div>
            </div>
          </form>
          {% else %}
          {% form 'customer', class: "newsletter-form" %}
            {% if form.posted_successfully? %}
            <div class="success-message">
              <div class="success-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="success-content">
                <h3>Welcome to our family! üéâ</h3>
                <p>{{ 'general.newsletter_form.mailing_list_success_message' | t | default: 'Thank you for subscribing! Check your email for confirmation.' }}</p>
              </div>
            </div>
            {% else %}
            <div class="form-group">
              <div class="input-wrapper">
                <input type="email"
                       value="{% if customer %}{{ customer.email }}{% endif %}"
                       placeholder="{{ 'general.newsletter_form.newsletter_email' | t | default: 'Enter your email address' }}"
                       name="contact[email]"
                       class="newsletter-input"
                       style="background-color: {{ section.settings.input_bg_color | default: '#FFFFFF' }}; color: {{ section.settings.input_text_color | default: '#2D3748' }};"
                       aria-label="{{ 'general.newsletter_form.newsletter_email' | t | default: 'Email address' }}"
                       required>
                <input type="hidden" name="contact[tags]" value="newsletter">
                <button type="submit" class="newsletter-button" name="subscribe"
                        style="background: {{ section.settings.button_bg_color | default: '#FF8FA3' }}; color: {{ section.settings.button_txt_color | default: '#FFFFFF' }};"
                        onmouseover="this.style.background='{{ section.settings.button_hover_bg_color | default: '#FF7A93' }}'; this.style.color='{{ section.settings.button_hover_txt_color | default: '#FFFFFF' }}';"
                        onmouseout="this.style.background='{{ section.settings.button_bg_color | default: '#FF8FA3' }}'; this.style.color='{{ section.settings.button_txt_color | default: '#FFFFFF' }}';">
                  <span class="button-text">{{ section.settings.button | default: 'Subscribe' }}</span>
                  <svg class="button-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
              </div>
            </div>
            {% endif %}
            {% if form.errors %}
            <div class="error-message">
              <div class="error-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                  <line x1="15" y1="9" x2="9" y2="15" stroke="currentColor" stroke-width="2"/>
                  <line x1="9" y1="9" x2="15" y2="15" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div class="error-content">
                {{ form.errors | default_errors }}
              </div>
            </div>
            {% endif %}
          {% endform %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Main container */
    .newsletter-section {
      padding: 60px 5%;
      position: relative;
      border-radius: 32px;
      margin: 60px 2%;
      overflow: hidden;
      background: linear-gradient(135deg, #FFF8F0, #F8F4FF);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
      width: 96%;
      max-width: none;
    }

    /* Decorative elements */
    .newsletter-decorations {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
      overflow: hidden;
    }

    .decoration {
      position: absolute;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
    }

    .decoration-1 {
      width: 120px;
      height: 120px;
      top: -60px;
      right: -60px;
      background: linear-gradient(45deg, rgba(255, 143, 163, 0.15), rgba(255, 192, 203, 0.15));
    }

    .decoration-2 {
      width: 80px;
      height: 80px;
      bottom: -40px;
      left: -40px;
      background: linear-gradient(45deg, rgba(173, 216, 230, 0.15), rgba(230, 230, 250, 0.15));
    }

    .decoration-3 {
      width: 60px;
      height: 60px;
      top: 20%;
      left: 10%;
      background: linear-gradient(45deg, rgba(255, 218, 185, 0.2), rgba(255, 228, 196, 0.2));
      animation: float 6s ease-in-out infinite;
    }

    .decoration-4 {
      width: 40px;
      height: 40px;
      bottom: 30%;
      right: 15%;
      background: linear-gradient(45deg, rgba(221, 160, 221, 0.2), rgba(230, 230, 250, 0.2));
      animation: float 8s ease-in-out infinite reverse;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-10px) rotate(5deg); }
    }

    .newsletter-container {
      margin: 0;
      position: relative;
      z-index: 1;
      width: 100%;
      padding: 0;
    }

    .newsletter-content {
      text-align: center;
      width: 100%;
    }

    /* Header styles */
    .newsletter-header {
      margin-bottom: 32px;
    }

    .newsletter-icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 64px;
      height: 64px;
      background: linear-gradient(135deg, #FF8FA3, #FFB6C1);
      border-radius: 50%;
      margin-bottom: 24px;
      color: white;
      box-shadow: 0 8px 32px rgba(255, 143, 163, 0.3);
    }

    .newsletter-title {
      font-size: clamp(28px, 5vw, 36px);
      font-weight: 700;
      line-height: 1.2;
      margin: 0 0 16px 0;
      background: linear-gradient(135deg, #2D3748, #4A5568);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .newsletter-description p {
      font-size: 16px;
      line-height: 1.6;
      margin: 0 0 20px 0;
      opacity: 0.8;
    }

    .newsletter-badge {
      display: inline-flex;
      align-items: center;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      padding: 8px 20px;
      border-radius: 25px;
      font-size: 14px;
      font-weight: 500;
      color: #4A5568;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* Trust indicators */
    .newsletter-trust {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 32px;
      margin-bottom: 40px;
    }

    .trust-item {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
      color: #6B7280;
      font-weight: 500;
    }

    .trust-item svg {
      color: #10B981;
    }

    /* Form styles */
    .newsletter-form-wrapper {
      width: 100%;
      max-width: none;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .newsletter-form {
      width: 100%;
      max-width: 800px;
      margin: 0 auto;
    }

    .form-group {
      width: 100%;
      max-width: none;
      margin: 0 auto;
      display: flex;
      justify-content: center;
    }

    .input-wrapper {
      position: relative;
      display: flex;
      background: white;
      border-radius: 50px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
      border: 2px solid transparent;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow: hidden;
      padding: 4px;
      width: 100%;
      max-width: none;
      align-items: stretch;
      gap: 8px;
      min-height: 56px;
    }

    .input-wrapper:focus-within {
      border-color: #FF8FA3;
      box-shadow: 0 12px 40px rgba(255, 143, 163, 0.2);
      transform: translateY(-2px);
    }

    .newsletter-input {
      flex: 1;
      border: none;
      background: transparent;
      padding: 0 20px;
      font-size: 16px;
      outline: none;
      transition: all 0.3s ease;
      font-family: inherit;
      border-radius: 50px;
      text-align: left;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
    }

    .newsletter-input::placeholder {
      color: #9CA3AF;
      opacity: 1;
    }

    .newsletter-input:focus::placeholder {
      opacity: 0.5;
    }

    .newsletter-button {
      border: none;
      border-radius: 50px;
      padding: 0 24px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      white-space: nowrap;
      position: relative;
      overflow: hidden;
      font-family: inherit;
      flex-shrink: 0;
      background: #FF8FA3 !important;
      color: #FFFFFF !important;
      height: 100%;
      min-width: 140px;
    }

    .newsletter-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.6s ease;
    }

    .newsletter-button:hover::before {
      left: 100%;
    }

    .newsletter-button:hover {
      transform: translateY(-1px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .newsletter-button:active {
      transform: translateY(0);
    }

    .button-icon {
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .newsletter-button:hover .button-icon {
      transform: translateX(3px);
    }

    /* Success message */
    .success-message {
      display: flex;
      align-items: center;
      gap: 16px;
      background: linear-gradient(135deg, #ECFDF5, #F0FDF4);
      border: 2px solid #BBF7D0;
      padding: 24px 32px;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(34, 197, 94, 0.1);
      animation: slideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .success-icon {
      flex-shrink: 0;
      color: #16A34A;
    }

    .success-content h3 {
      margin: 0 0 8px 0;
      font-size: 18px;
      font-weight: 600;
      color: #15803D;
    }

    .success-content p {
      margin: 0;
      color: #166534;
      font-size: 14px;
    }

    /* Error message */
    .error-message {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-top: 16px;
      padding: 16px 20px;
      background: linear-gradient(135deg, #FEF2F2, #FECACA);
      border: 2px solid #FECACA;
      color: #DC2626;
      border-radius: 12px;
      font-size: 14px;
      animation: slideIn 0.3s ease;
    }

    .error-icon {
      flex-shrink: 0;
    }

    /* Animations */
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Tablet Responsive */
    @media screen and (max-width: 1024px) {
      .newsletter-section {
        padding: 50px 4%;
        margin: 50px 1.5%;
        width: 97%;
      }

      .newsletter-form {
        max-width: 600px;
      }

      .input-wrapper {
        min-height: 52px;
      }

      .newsletter-button {
        min-width: 120px;
        padding: 0 20px;
      }
    }

    /* Mobile Responsive */
    @media screen and (max-width: 768px) {
      .newsletter-section {
        padding: 40px 5%;
        border-radius: 24px;
        margin: 40px 2%;
        width: 96%;
      }

      .newsletter-container {
        padding: 0;
      }

      .newsletter-icon {
        width: 56px;
        height: 56px;
        margin-bottom: 20px;
      }

      .newsletter-icon svg {
        width: 24px;
        height: 24px;
      }

      .newsletter-title {
        font-size: 24px;
        margin-bottom: 12px;
      }

      .newsletter-description p {
        font-size: 15px;
        margin-bottom: 16px;
      }

      .newsletter-trust {
        flex-direction: column;
        gap: 16px;
        align-items: center;
        margin-bottom: 32px;
      }

      .trust-item {
        font-size: 13px;
      }

      .newsletter-form-wrapper {
        display: block;
      }

      .newsletter-form {
        max-width: none;
        width: 100%;
      }

      .form-group {
        display: block;
      }

      .input-wrapper {
        flex-direction: column;
        border-radius: 20px;
        padding: 8px;
        gap: 8px;
        min-height: auto;
        align-items: stretch;
      }

      .newsletter-input {
        padding: 18px 20px;
        text-align: left;
        border-radius: 16px;
        height: 50px;
        min-height: 50px;
        display: block;
        align-items: unset;
      }

      .newsletter-button {
        margin-top: 0;
        border-radius: 16px;
        justify-content: center;
        padding: 16px 32px;
        background: #FF8FA3 !important;
        color: #FFFFFF !important;
        height: 50px;
        min-height: 50px;
        min-width: 100%;
        width: 100%;
      }

      .success-message {
        flex-direction: column;
        text-align: center;
        gap: 12px;
      }

      .decoration-3,
      .decoration-4 {
        display: none;
      }
    }

              /* Small Mobile Responsive */
    @media screen and (max-width: 480px) {
      .newsletter-section {
        padding: 30px 4%;
        margin: 30px 1%;
        width: 98%;
        border-radius: 20px;
      }

      .newsletter-container {
        padding: 0;
      }

      .newsletter-icon {
        width: 48px;
        height: 48px;
        margin-bottom: 16px;
      }

      .newsletter-icon svg {
        width: 20px;
        height: 20px;
      }

      .newsletter-title {
        font-size: 20px;
        margin-bottom: 10px;
      }

      .newsletter-description p {
        font-size: 14px;
        margin-bottom: 14px;
      }

      .newsletter-badge {
        font-size: 12px;
        padding: 6px 16px;
      }

      .newsletter-trust {
        gap: 12px;
        margin-bottom: 24px;
      }

      .trust-item {
        font-size: 12px;
      }

      .input-wrapper {
        padding: 6px;
        gap: 6px;
      }

      .newsletter-input {
        padding: 16px 18px;
        font-size: 15px;
        height: 48px;
        min-height: 48px;
      }

      .newsletter-button {
        padding: 14px 24px;
        font-size: 15px;
        height: 48px;
        min-height: 48px;
      }

      .form-group {
        width: 100%;
        max-width: none;
      }
    }

    /* Extra Small Screens */
    @media screen and (max-width: 360px) {
      .newsletter-section {
        padding: 25px 3%;
        margin: 25px 0.5%;
        width: 99%;
      }

      .newsletter-title {
        font-size: 18px;
      }

      .newsletter-description p {
        font-size: 13px;
      }

      .trust-item {
        font-size: 11px;
      }

      .trust-item svg {
        width: 14px;
        height: 14px;
      }

      .newsletter-input {
        padding: 14px 16px;
        font-size: 14px;
        height: 46px;
        min-height: 46px;
      }

      .newsletter-button {
        padding: 12px 20px;
        font-size: 14px;
        height: 46px;
        min-height: 46px;
      }
    }

    /* High contrast mode support */
    @media (prefers-contrast: high) {
      .newsletter-section {
        border: 2px solid;
      }

      .input-wrapper {
        border: 2px solid;
      }
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
      .decoration-3,
      .decoration-4 {
        animation: none;
      }

      .newsletter-button,
      .input-wrapper {
        transition: none;
      }
    }
  </style>
</div>
{% endif %}

<div class="section-spacing"></div>

<style>
  .section-spacing {
    height: 60px;
  }

  @media (max-width: 768px) {
    .section-spacing {
      height: 40px;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "class": "index-section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFF8F0"
    },
    {
      "type": "color",
      "id": "bg_gradient_color",
      "label": "Background Gradient Color",
      "default": "#F8F4FF"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Stay Connected with Baby Planet"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Heading Color",
      "default": "#2D3748"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Get expert parenting tips, product updates, and exclusive offers delivered straight to your inbox. Join our community of loving parents!"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Description Color",
      "default": "#4A5568"
    },
    {
      "type": "text",
      "id": "subscriber_count",
      "label": "Subscriber Count",
      "default": "10,000+"
    },
    {
      "type": "color",
      "id": "input_bg_color",
      "label": "Input Background Color",
      "default": "#FFFFFF"
    },
