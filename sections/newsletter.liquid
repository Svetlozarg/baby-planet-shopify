{% if section.settings.title != blank or section.settings.text != blank %}
<div class="page-width" data-section-id="{{ section.id }}" data-section-type="newsletter-block">
  <div class="newsletter-section">
    <div class="newsletter-container">
      <div class="newsletter-content">
        <div class="newsletter-header">
          {% if section.settings.title != blank %}
          <h2 class="newsletter-title">
            {{ section.settings.title }}
          </h2>
          {% endif %}

          {% if section.settings.text != blank %}
          <div class="newsletter-description">
            <p>{{ section.settings.text }}</p>
          </div>
          {% endif %}
        </div>

        <div class="newsletter-form-wrapper">
          {% if settings.newsletter_form_action != blank %}
          <form action="{{ settings.newsletter_form_action }}" method="post" name="mc-embedded-subscribe-form" target="_blank" class="newsletter-form">
            <div class="form-group" style="display: flex; align-items: center; justify-content: center; gap: 10px;">
              <input type="email"
                     value="{% if customer %}{{ customer.email }}{% endif %}"
                     placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}"
                     name="EMAIL"
                     class="newsletter-input"
                     aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}"
                     required>
              <button type="submit" class="newsletter-button" name="subscribe">
                {{ section.settings.button }}
                <svg class="button-icon" width="14" height="14" viewBox="0 0 24 24" fill="none">
                  <path d="M9 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
          </form>
          {% else %}
          {% form 'customer', class: "newsletter-form" %}
            {% if form.posted_successfully? %}
            <div class="success-message">
              <p>{{ 'general.newsletter_form.mailing_list_success_message' | t }}</p>
            </div>
            {% else %}
            <div class="form-group">
              <input type="email"
                     value="{% if customer %}{{ customer.email }}{% endif %}"
                     placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}"
                     name="contact[email]"
                     class="newsletter-input"
                     aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}"
                     required>
              <input type="hidden" name="contact[tags]" value="newsletter">
              <button type="submit" class="newsletter-button" name="subscribe">
                {{ section.settings.button }}
                <svg class="button-icon" width="14" height="14" viewBox="0 0 24 24" fill="none">
                  <path d="M9 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
            {% endif %}
            {% if form.errors %}
            <div class="error-message">
              {{ form.errors | default_errors }}
            </div>
            {% endif %}
          {% endform %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <style>
    .newsletter-section {
      padding: 80px 20px;
      position: relative;
      background-color: #FFF7D6;
      border-radius: 40px;
      margin: 40px 0;
      overflow: hidden;
    }

    .newsletter-container {
      width: 100%;
      max-width: 1400px;
      margin: 0 auto;
    }

    .newsletter-content {
      text-align: center;
    }

    .newsletter-header {
      margin-bottom: 32px;
    }

    .newsletter-title {
      font-size: 42px;
      font-weight: 600;
      line-height: 1.2;
      margin: 0 0 16px 0;
      color: #333333;
    }

    .newsletter-description p {
      font-size: 16px;
      line-height: 1.6;
      color: #666666;
      margin: 0;
      max-width: 460px;
      margin: 0 auto;
    }

    .newsletter-form-wrapper {
      width: 100%;
      max-width: 1400px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .newsletter-form {
      width: 100%;
    }

    .form-group {
      position: relative;
      display: block;
      width: 100%;
    }

    .newsletter-input {
      width: 100%;
      border: none;
      background: #FFFFFF;
      padding: 18px 160px 18px 24px;
      font-size: 16px;
      color: #333333;
      outline: none;
      border-radius: 50px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
      transition: box-shadow 0.2s ease;
    }

    .newsletter-input:focus {
      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.12);
    }

    .newsletter-input::placeholder {
      color: #999999;
      opacity: 0.8;
    }

    .newsletter-button {
      background: #e7e7e7;
      color: #000000;
      border: none;
      border-radius: 50px;
      padding: 14px 20px;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 4px;
      transition: all 0.2s ease;
      white-space: nowrap;
      height: calc(100% - 12px);
      margin-top: 20px;
    }

    .newsletter-button:hover {
      background: #EBEBEB;
    }

    .button-icon {
      transition: transform 0.2s ease;
      opacity: 0.5;
      width: 12px;
      height: 12px;
    }

    .newsletter-button:hover .button-icon {
      transform: translateX(1px);
      opacity: 0.7;
    }

    .success-message {
      background: #FFFFFF;
      color: #059669;
      padding: 20px 32px;
      border-radius: 100px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .success-message p {
      margin: 0;
    }

    .error-message {
      margin-top: 16px;
      padding: 12px 20px;
      background: rgba(239, 68, 68, 0.1);
      color: #dc2626;
      border-radius: 100px;
      font-size: 14px;
    }

    @media screen and (max-width: 768px) {
      .newsletter-section {
        padding: 60px 20px;
        border-radius: 30px;
        margin: 30px 0;
      }

      .newsletter-title {
        font-size: 32px;
      }

      .newsletter-input {
        padding: 20px 24px;
        text-align: center;
      }

      .newsletter-button {
        position: static;
        transform: none;
        width: 100%;
        margin-top: 12px;
        justify-content: center;
        padding: 16px 24px;
      }

      .newsletter-button:hover {
        transform: none;
      }
    }
  </style>
</div>
{% endif %}

<div class="section-spacing"></div>

<style>
  .section-spacing {
    height: 40px;
  }

  @media (max-width: 768px) {
    .section-spacing {
      height: 20px;
    }
  }
</style>


