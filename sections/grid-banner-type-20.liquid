<div data-section-id="{{ section.id }}" data-section-type="grid-banner-type-20" class="hero-slider-section">
  {% if section.blocks.size > 0 %}
    <div class="hero-slider-container">
      <div class="hero-slides" id="heroSlider">
        {% for block in section.blocks %}
          <div class="hero-slide {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}">
            <div class="slide-background">
              {% if block.settings.slideshow_1_img != blank %}
                <img src="{{ block.settings.slideshow_1_img | img_url: '1920x800' }}" alt="{{ block.settings.slider1_title | escape }}" class="slide-image">
              {% else %}
                <div class="slide-placeholder"></div>
              {% endif %}
              <div class="slide-overlay"></div>
            </div>
            <div class="slide-content">
              <div class="content-wrapper">
                {% if block.settings.slider1_subtitle != blank %}
                  <span class="slide-subtitle" style="color: {{ block.settings.slide_1_subheading | default: '#ff9a9e' }}">
                    {{ block.settings.slider1_subtitle }}
                  </span>
                {% endif %}
                {% if block.settings.slider1_title != blank %}
                  <h1 class="slide-title" style="color: {{ block.settings.slide_1_heading | default: '#2c3e50' }}">
                    {{ block.settings.slider1_title }}
                  </h1>
                {% endif %}
                {% if block.settings.slider1_content != blank %}
                  <p class="slide-description" style="color: {{ block.settings.slide_1_desc | default: '#5a6c7d' }}">
                    {{ block.settings.slider1_content }}
                  </p>
                {% endif %}
                {% if block.settings.slide_1_btn_txt != blank %}
                  <a href="{{ block.settings.slide_1_link | default: '/collections/all' }}" class="slide-button"
                     style="background-color: {{ block.settings.slide_1_btn | default: '#ff9a9e' }}; color: {{ block.settings.slide_1_btn_hover_txt | default: '#fff' }}">
                    {{ block.settings.slide_1_btn_txt }}
                    <svg class="button-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                      <path d="M8 1L15 8L8 15M15 8H1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if section.blocks.size > 1 %}
        <!-- Navigation Controls -->
        <div class="slider-controls">
          <button class="slider-nav prev" aria-label="Previous slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button class="slider-nav next" aria-label="Next slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>

        <!-- Dots Indicator -->
        <div class="slider-dots">
          {% for block in section.blocks %}
            <button class="dot {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

<style>
  .hero-slider-section {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .hero-slider-container {
    position: relative;
    max-width: 100vw;
    height: 80vh;
    min-height: 400px;
    max-height: 700px;
    overflow: hidden;
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .hero-slides {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transform: translateX(100%);
  }

  .hero-slide.active {
    opacity: 1;
    visibility: visible;
    transform: translateX(0);
  }

  .hero-slide.prev {
    transform: translateX(-100%);
  }

  .slide-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.8s ease-in-out;
  }

  .hero-slide.active .slide-image {
    transform: scale(1.05);
  }

  .slide-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    color: #fff;
  }

  .slide-placeholder::before {
    content: "Baby Planet Hero";
    font-family: 'Comic Sans MS', cursive;
  }

  .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(255, 154, 158, 0.2) 100%
    );
  }

  .slide-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 2;
    width: 100%;
    max-width: 800px;
    padding: 0 2rem;
  }

     .content-wrapper {
     background: rgba(255, 255, 255, 0.15);
     backdrop-filter: blur(10px);
     border-radius: 30px;
     padding: 1rem;
     box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
     border: 1px solid rgba(255, 255, 255, 0.3);
     animation: slideUp 0.8s ease-out 0.3s both;
   }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .slide-subtitle {
    display: inline-block;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 1rem;
    padding: 0.5rem 1.5rem;
    background: rgba(255, 154, 158, 0.1);
    border-radius: 50px;
    border: 2px solid currentColor;
  }

  .slide-title {
    font-family: 'Comic Sans MS', 'Comic Sans', cursive, sans-serif;
    font-size: 3.5rem;
    font-weight: bold;
    line-height: 1.2;
    margin: 1.5rem 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .slide-description {
    font-size: 1.2rem;
    line-height: 1.6;
    margin: 1.5rem 0 2.5rem 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .slide-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.3s ease;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    border: none;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .slide-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
  }

  .button-arrow {
    transition: transform 0.3s ease;
  }

  .slide-button:hover .button-arrow {
    transform: translateX(5px);
  }

  .slider-controls {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    padding: 0 2rem;
    pointer-events: none;
    z-index: 3;
  }

  .slider-nav {
    backdrop-filter: blur(10px);
    border: none;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    pointer-events: all;
    color: #333;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .slider-nav:hover {
    background: rgba(255, 154, 158, 0.9);
    color: #fff;
    transform: scale(1.1);
  }

  .slider-dots {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 1rem;
    z-index: 3;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .dot.active,
  .dot:hover {
    background: rgba(255, 154, 158, 0.9);
    transform: scale(1.2);
  }

     /* Responsive Design */
   @media (max-width: 1024px) {
     .hero-slider-container {
       height: 60vh;
       min-height: 350px;
     }

    .slide-title {
      font-size: 2.8rem;
    }

    .content-wrapper {
      padding: 2.5rem 2rem;
    }
  }

     @media (max-width: 768px) {
     .hero-slider-container {
       height: 50vh;
       min-height: 300px;
     }

    .slide-content {
      padding: 0 1rem;
    }

    .content-wrapper {
      padding: 2rem 1.5rem;
      border-radius: 20px;
    }

    .slide-title {
      font-size: 2.2rem;
    }

    .slide-description {
      font-size: 1rem;
    }

    .slider-nav {
      width: 50px;
      height: 50px;
    }

    .slider-controls {
      padding: 0 1rem;
    }
  }

     @media (max-width: 480px) {
     .hero-slider-container {
       height: 45vh;
       min-height: 280px;
     }

    .content-wrapper {
      padding: 1.5rem 1rem;
    }

    .slide-title {
      font-size: 1.8rem;
      margin: 1rem 0;
    }

    .slide-subtitle {
      font-size: 0.8rem;
      padding: 0.3rem 1rem;
    }

    .slide-description {
      font-size: 0.9rem;
      margin: 1rem 0 1.5rem 0;
    }

    .slide-button {
      padding: 0.8rem 2rem;
      font-size: 1rem;
    }

    .slider-nav {
      width: 40px;
      height: 40px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.getElementById('heroSlider');
    if (!slider) return;

    const slides = slider.querySelectorAll('.hero-slide');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.querySelector('.slider-nav.prev');
    const nextBtn = document.querySelector('.slider-nav.next');

    let currentSlide = 0;
    let isTransitioning = false;
    let autoplayInterval;

    function goToSlide(index) {
      if (isTransitioning || index === currentSlide) return;

      isTransitioning = true;

      // Remove active classes
      slides[currentSlide].classList.remove('active');
      dots[currentSlide]?.classList.remove('active');

      // Add transition classes
      if (index > currentSlide) {
        slides[currentSlide].classList.add('prev');
      }

      // Update current slide
      currentSlide = index;

      // Add active classes
      slides[currentSlide].classList.add('active');
      dots[currentSlide]?.classList.add('active');

      // Clean up transition classes
      setTimeout(() => {
        slides.forEach(slide => slide.classList.remove('prev'));
        isTransitioning = false;
      }, 800);
    }

    function nextSlide() {
      const next = currentSlide === slides.length - 1 ? 0 : currentSlide + 1;
      goToSlide(next);
    }

    function prevSlide() {
      const prev = currentSlide === 0 ? slides.length - 1 : currentSlide - 1;
      goToSlide(prev);
    }

    function startAutoplay() {
      if (slides.length > 1) {
        autoplayInterval = setInterval(nextSlide, 8000);
      }
    }

    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }

    // Event listeners
    nextBtn?.addEventListener('click', () => {
      nextSlide();
      stopAutoplay();
      setTimeout(startAutoplay, 3000);
    });

    prevBtn?.addEventListener('click', () => {
      prevSlide();
      stopAutoplay();
      setTimeout(startAutoplay, 3000);
    });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        goToSlide(index);
        stopAutoplay();
        setTimeout(startAutoplay, 3000);
      });
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        prevSlide();
        stopAutoplay();
        setTimeout(startAutoplay, 3000);
      } else if (e.key === 'ArrowRight') {
        nextSlide();
        stopAutoplay();
        setTimeout(startAutoplay, 3000);
      }
    });

    // Pause autoplay on hover
    slider.addEventListener('mouseenter', stopAutoplay);
    slider.addEventListener('mouseleave', startAutoplay);

    // Touch/swipe support
    let startX = 0;
    let endX = 0;

    slider.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
      stopAutoplay();
    });

    slider.addEventListener('touchend', (e) => {
      endX = e.changedTouches[0].clientX;
      const diff = startX - endX;

      if (Math.abs(diff) > 50) {
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
      }

      setTimeout(startAutoplay, 3000);
    });

    // Start autoplay
    startAutoplay();
  });
</script>

