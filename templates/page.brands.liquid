{% comment %}
  Baby Planet Brands Page Template
  Clean, modern, and fully responsive design for displaying brand partners
{% endcomment %}

<div class="brands-page">
  <div class="page-width">
    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb" role="navigation" aria-label="Breadcrumb">
      <div class="breadcrumb-container">
        <a href="/" class="breadcrumb-link">
          <i class="fa fa-home"></i>
          {{ 'general.breadcrumbs.home' | t }}
        </a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">{{ page.title }}</span>
      </div>
    </nav>

    <!-- Page Header -->
    <div class="page-header">
      <div class="page-header-content">
        <h1 class="page-title">{{ page.title }}</h1>
        {% if page.content != blank %}
          <div class="page-description">
            {{ page.content }}
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Brands Section -->
    <div class="brands-content">
      {% section 'brands-showcase' %}
    </div>
  </div>
</div>

<style>
  /* Brands Page Styles */
  .brands-page {
    padding: 20px 0 60px;
    background: linear-gradient(135deg, #fef7f0 0%, #fff5f8 100%);
    min-height: 60vh;
  }

  /* Breadcrumb Styles */
  .breadcrumb {
    margin-bottom: 30px;
  }

  .breadcrumb-container {
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #7b6b8a;
    flex-wrap: wrap;
    gap: 8px;
  }

  .breadcrumb-link {
    color: #7b6b8a;
    text-decoration: none;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .breadcrumb-link:hover {
    color: #ff6b9d;
  }

  .breadcrumb-separator {
    color: #bbb;
    font-weight: 300;
  }

  .breadcrumb-current {
    color: #333;
    font-weight: 500;
  }

  /* Page Header Styles */
  .page-header {
    text-align: center;
    margin-bottom: 50px;
    padding: 40px 20px;
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(255, 107, 157, 0.1);
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #ff6b9d, #ffc107, #ff6b9d);
    background-size: 200% 100%;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { background-position: 200% 0; }
    50% { background-position: -200% 0; }
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 15px;
    background: linear-gradient(135deg, #ff6b9d, #7b6b8a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .page-description {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .page-description p {
    margin-bottom: 15px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .brands-page {
      padding: 15px 0 40px;
    }

    .breadcrumb-container {
      font-size: 13px;
    }

    .page-header {
      margin-bottom: 30px;
      padding: 30px 15px;
      border-radius: 15px;
    }

    .page-title {
      font-size: 2rem;
    }

    .page-description {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .page-title {
      font-size: 1.8rem;
    }

    .page-header {
      padding: 25px 15px;
    }

    .breadcrumb-container {
      flex-wrap: wrap;
    }
  }
</style>
